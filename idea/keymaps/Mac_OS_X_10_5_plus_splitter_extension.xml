<keymap version="1" name="Mac OS X 10.5+ splitter extension" parent="Mac OS X 10.5+">
  <action id="MoveTabDown">
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="shift V" />
  </action>
  <action id="MoveTabRight">
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="shift H" />
  </action>
  <action id="NextSplitter">
    <keyboard-shortcut first-keystroke="alt TAB" />
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="N" />
  </action>
  <action id="PrevSplitter">
    <keyboard-shortcut first-keystroke="shift alt TAB" />
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="P" />
  </action>
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="V" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="H" />
  </action>
  <action id="Unsplit">
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="X" />
  </action>
  <action id="UnsplitAll">
    <keyboard-shortcut first-keystroke="meta I" second-keystroke="shift X" />
  </action>
</keymap>
